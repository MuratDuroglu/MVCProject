@model  IEnumerable<EntityLayer.Concreate.Category>
@{
    Layout = null;
}


<h3>Merhaba</h3>

<br/>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<table class="table table-hover">
    @foreach (var item in @Model.ToList())
    {
      
    <tr>
        <th>@item.CategoryId</th>
        <th>@item.CategoryName</th>
        <th>@item.CategoryDescription</th>
        <th>@item.CategoryStatus</th>
        <th><buton class="btn-danger">Güncelle</buton></th>
    </tr>
    }


</table>

<br/>

<a href="/Category/AddNewCategory" class="btn btn-info">YeniCategori</a>
